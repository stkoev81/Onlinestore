<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>Extensions Filter</filter-name>
        <filter-class>org.apache.myfaces.webapp.filter.ExtensionsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Extensions Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>facelets.SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
           30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/ProjectInfo/Overview.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Constraint1</display-name>
        <web-resource-collection>
            <web-resource-name>account</web-resource-name>
            <description/>
            <url-pattern>/InsideAccount/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>MANAGER</role-name>
            <role-name>CUSTOMER</role-name>
            <role-name>WAREHOUSE_WORKER</role-name>
            <role-name>ACCOUNTANT</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Constraint2</display-name>
        <web-resource-collection>
            <web-resource-name>employee</web-resource-name>
            <description/>
            <url-pattern>/InsideAccount/Employee/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>MANAGER</role-name>
            <role-name>ACCOUNTANT</role-name>
            <role-name>WAREHOUSE_WORKER</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Constraint3</display-name>
        <web-resource-collection>
            <web-resource-name>manageproducts</web-resource-name>
            <description/>
            <url-pattern>/InsideAccount/Manager/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>MANAGER</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/LogIn/LogIn.xhtml</form-login-page>
            <form-error-page>/LogIn/NotAuth.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>CUSTOMER</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>MANAGER</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>ACCOUNTANT</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>WAREHOUSE_WORKER</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>DEMO</role-name>
    </security-role>
</web-app>
